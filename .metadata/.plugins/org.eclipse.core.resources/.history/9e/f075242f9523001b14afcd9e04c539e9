package oo.encapsulamento;

public class Pessoa {

	private int idade;
	
	public Pessoa(int idade) {
		this.idade = idade;
	}
	
	public int lerIdade() {
		return idade;
	}
	
	public void alterarIdade(int novaIdade) {
		if (novaIdade >= 0) {
		this.idade = novaIdade;
		} else {
			System.out.println("Não existe esta idade");
		}
	}
	
	
}
