package oo.heranca.desafio;

public class Dirigir {
	public static void main(String[] args) {
		
		Civic civic = new Civic();
		
		civic.acelerar();
		System.out.println(civic);
		
		civic.acelerar();
		System.out.println(civic);
		
		civic.acelerar();
		System.out.println(civic);
		
		Carro ferrari = new Ferrari(400); // ferrari extends carro, podemos generalizar como carro.
		
		ferrari.acelerar();
		ferrari.freiar();
		System.out.println(ferrari);
		
		ferrari.acelerar();
		ferrari.freiar();
		System.out.println(ferrari);
		
		ferrari.acelerar();
		System.out.println(ferrari);
		
	
	}

}
